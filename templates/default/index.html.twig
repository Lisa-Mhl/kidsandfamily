{% extends 'base.html.twig' %}

{% block body %}

    <div class="cover">
        <div class="coverLinks">
            <span class="coverCtn">
            KIDS AND FAMILY <br>
            CREATEUR D'EXPERIENCES EN FAMILLE <br>
                {% if app.user %}
                    <a id="coverBtn" class="btn loginBtn" href="#news">Nouveautés</a>
                    <a id="coverBtn" class="btn loginBtn" href="#">Contribuer</a>
                {% else %}
                    <a id="coverBtn" class="btn loginBtn" href="#a-propos">Nous Découvrir</a>
                    <a id="coverBtn" class="btn loginBtn" href="{{ path('app_register') }}">S'inscrire</a>
                {% endif %}
                </span>
        </div>
    </div>

    <div id="a-propos"></div>
    <div class="aboutCtn">
        <div id="about">
            <h2>Notre volonté</h2>
            <h4>
                Faire vivre des expériences, recréer des moments de partage et de lien, porteurs de valeurs, pour les
                enfants et la famille
            </h4>
        </div>
    </div>

    <div id="target">
        <h2>Pour qui ?</h2>
        <div class="row targetCtn">
            <div class="card targetCard">
                <div class="row">
                    <i class="fas fa-users"></i>
                    <h4 class="card-title">Les familles</h4></div>
                <img class="card-img targetImg"
                     src="https://cdn.pixabay.com/photo/2017/12/24/08/50/family-3036595_960_720.jpg"
                     alt="Photo Famille">
            </div>
            <div class="card targetCard">
                <div class="row">
                    <i class="fas fa-house-user"></i>
                    <h4 class="card-title targetTitle">Les sites d'accueil</h4></div>
                <img class="card-img targetImg"
                     src="https://img.freepik.com/vecteurs-libre/mignon-drole-souriant-heureux-france-carte-drapeau-personnage_92289-244.jpg?size=338&ext=jpg"
                     alt="Photo Famille">
            </div>
        </div>
    </div>

    <div class="services">
        <h2>Notre démarche</h2>
        <h4 class="servicesBody">AIDER | RECENSER | PROPOSER <br> <br>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod
            tempor incididunt ut labore
            et
            dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut
            aliquip
            ex ea commodo consequat. </h4>
    </div>

    <div id="news"></div>
    <div class="news">
        <h2 class="newsTitle">Les dernières publications</h2>
        {% for article in articles %}
            <div class="card articleCard" id="articleCard">
                <img class="card-img articleImg" src="{{ article.photo }}"
                     alt="{{ article.title }}">
                <div class="articleHead">
                    <h5 class="card-title articleTitle">{{ article.title }}</h5>
                    <span class="like">
                    <i class="fas fa-heart"></i> J'aime</span>
                </div>
                {# AJOUTER SYSTEME DE LIKE #}
                {% for category in article.category %}
                    <div class="card-title articleCategory ">{{ category.name }}</div>
                {% endfor %}
                <p class="card-body">
                    {# AJOUTER PHOTO DE PROFIL DE L'AUTEUR #} Auteur
                    <i class="fa fa-commenting-o com"></i> <a class="articleLink" href="#">Commenter</a> {# AJOUTER SYSTEM DE COMMENT #}
                    <i class="fa fa-envelope-o com"></i> <a class="articleLink" href="#">Message
                        Privé</a> {# AJOUTER SYSTEM DE MESSAGE DIRECT #}
                </p>
            </div>
        {% endfor %}
    </div>

    <div class="eshopCtn">
        <div class="eshop">
            <h2>Notre E-Shop est ouvert !</h2>
            <iframe src="https://giphy.com/embed/xUA7aLpVxPVEoEPXji" width="480" height="270" frameBorder="0"
            ></iframe>
            <h4>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore
                et
                dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut
                aliquip
                ex ea commodo consequat. </h4>
            <a class="eshopLink" href="#" target="_blank">Visiter la boutique en ligne</a>
        </div>
    </div>

{% endblock %}
