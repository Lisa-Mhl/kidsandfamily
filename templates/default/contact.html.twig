{% extends 'base.html.twig' %}

{% block body %}

    <div class="ctn">
        <h1 class="detailsTitle">Contactez-Nous</h1>
        <div class="form-contact-ctn">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div>
                {{ form_row(form.subject, {'label': 'Sujet'}) }}
            </div>
            <div>
                {{ form_row(form.name, {'label': 'Nom'}) }}
            </div>
            <div>
                {{ form_row(form.email, {'label': 'Email'}) }}
            </div>
            <div>
                {{ form_row(form.message, {'label': 'Message'}) }}
            </div>
            <div class="row justify-content-center">
                <button class="linkQuote">{{ button_label|default('Envoyer') }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
