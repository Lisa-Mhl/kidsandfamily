{% extends 'base_user.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
    <div class="ctn myArticlesCtn">
        <h1 class="detailsTitle">Mes Publications</h1>

        {% if is_granted('ROLE_USER') %}
            <div class="addArticleLink">
                {# {% if article.author == app.user %} #} {# NE FONCTIONNE PAS / A CHECKER #}
                <a id="addArticleLink" href="{{ path('article_new') }}">Ajouter une publication</a>
                {# {% endif %} #}
            </div>

        {% else %}
            <p class="text-center">Seuls les utilisateurs connectés peuvent accéder à cette page <br>
                <a href="{{ path('app_login') }}">Connexion</a>
            </p>
        {% endif %}

        <div class="row">
            {% for article in articles %}
                {% if app.user is same as (article.author) %}
                    <div class="card articleCard" id="myArticlesCard">
                        <img class="card-img allArticlesImg" src="{{ vich_uploader_asset(article, 'photoFile')}}"
                             alt="{{ article.title }}">
                        <div class="articleHead">
                            <h5 class="card-title articleTitle">{{ article.title }}</h5>
                            <a href="{{ path('my_article_like', {'id' : article.id }) }}"
                               class="btn btn-link js-like">
                                {% if app.user and article.isLikedByUser(app.user) %}
                                    <i class="fas fa-thumbs-up"></i>
                                {% else %}
                                    <i class="far fa-thumbs-up"></i>
                                {% endif %}
                                <span class="js-link-count">{{ article.likes | length }}</span>
                                {% if app.user and article.isLikedByUser(app.user) %}
                                    <span class="js-link-label">J'AIME</span>
                                {% else %}
                                    <span class="js-link-label">J'AIME</span>
                                {% endif %}
                            </a>
                        </div>
                        {# TO DO : AJOUTER SYSTEME DE LIKE #}
                        <div class="row">
                            {% for category in article.category %}
                                <div class="card-title articleCategory">{{ category.name }}</div>
                            {% endfor %}
                        </div>
                        <div class="articleCrudLink">

                            <a class="cardUpdateLink bold" href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
                            {{ include('article/_delete_form.html.twig') }}

                        </div>
                        <a class="detailsLink" id="detLink"
                           href="{{ path('article_details', {'id': article.id}) }}">Voir la publication</a>
                    </div>

                {% endif %}
            {% endfor %}
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script>
        document.querySelectorAll(`a.js-like`).forEach(link => {
            link.addEventListener('click', e => {
                e.preventDefault()
                var spanCount = link.querySelector(`span.js-link-count`)
                var spanLabel = link.querySelector('span.js-link-label')
                var icone = link.querySelector('i')
                axios.get(link.href)
                    .then(response => {
                        spanCount.textContent = response.data.likes
                        if (icone.classList.contains('fas')) {
                            icone.classList.replace('fas', 'far')
                            spanLabel.textContent = "J'AIME"
                        }
                    }).catch(error => {
                    if (error.response.status === 403) {
                        window.alert("Vous ne pouvez pas liker un article si vous n'êtes pas connecté !")
                    }
                })
            })
        })
    </script>
{% endblock %}
