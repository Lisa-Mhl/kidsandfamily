{% extends 'base.html.twig' %}


{% block title %}Mon compte{% endblock %}

{% block body %}
    <div class="ctn myArticlesCtn">
        <h1 class="detailsTitle">Mes Publications</h1>

        {% if is_granted('ROLE_USER') %}
            <div class="addArticleLink">
                {# {% if article.author == app.user %} #} {# NE FONCTIONNE PAS / A CHECKER #}
                <a id="addArticleLink" href="{{ path('article_new') }}">Ajouter une publication</a>
                {# {% endif %} #}
            </div>

            <!-- The sidebar -->
            <div class="sidebar">
                <a href="#"><i class="fa fa-info-circle"></i> Information</a>
                <a href="#"><i class="fa fa-fw fa-home"></i> Coordonnées</a>
                <a href="#"><i class="fa fa-mobile"></i> Catégories</a>
                <a href="#"><i class="fa fa-heart"></i> Centres d'intérêts</a>
                <a href="#"><i class="fa fa-picture-o"></i> Mes publications</a>
                <a href="#"><i class="fa fa-users"></i> Discussion</a>
            </div>
            <!-- dropdown -->
            <div class="dropdown">
                <button class="btn dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-cog" aria-hidden="true"></i>
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                    <a href="#"><i class="fa fa-info-circle"></i>
                        <li> Information</li>
                    </a>
                    <a href="#"><i class="fa fa-fw fa-home"></i>
                        <li> Coordonnées</li>
                    </a>
                    <a href="#"><i class="fa fa-mobile"></i>
                        <li> Catégories</li>
                    </a>
                    <a href="#"><i class="fa fa-heart"></i>
                        <li> Centres d'intérêts</li>
                    </a>
                    <a href="#"><i class="fa fa-picture-o"></i>
                        <li> Mes publications</li>
                    </a>
                    <a href="#"><i class="fa fa-users"></i>
                        <li> Discussion</li>
                    </a>
                </div>
            </div>

        {% else %}
            <p class="text-center">Seuls les utilisateurs connectés peuvent accéder à cette page <br>
                <a href="{{ path('app_login') }}">Connexion</a>
            </p>
        {% endif %}

        <div class="row">
            {% for article in articles %}
                {% if app.user is same as (article.author) %}
                    <div class="card articleCard" id="myArticlesCard">
                        <img class="card-img allArticlesImg" src="{{ article.photo }}"
                             alt="{{ article.title }}">
                        <div class="articleHead">
                            <h5 class="card-title articleTitle">{{ article.title }}</h5>
                            <span class="like">
                    <i class="fas fa-heart"></i> J'aime</span>
                        </div>
                        {# TO DO : AJOUTER SYSTEME DE LIKE #}
                        <div class="row">
                            {% for category in article.category %}
                                <div class="card-title articleCategory">{{ category.name }}</div>
                            {% endfor %}
                        </div>
                        <div class="articleCrudLink">

                                <a class="cardUpdateLink" href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>
                                {{ include('article/_delete_form.html.twig') }}

                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    </div>
{% endblock %}
