{% extends 'base_user.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
    <h1>Mon compte</h1>

    {% if app.user %}
        {% if is_granted('ROLE_USER') %}
            <div class="profileCtn">

            <div class="card cardProfile" id="cardProfile">
                <div class="card-body">
                    {% if user.avatar %}
                        <img class="card-img-top imgProfile" src="{{ vich_uploader_asset(user, 'avatarFile') }}"
                             alt="profile picture">
                    {% endif %}
                    <h1>{{ user.username }}</h1>
                    <p>{{ user.firstname }}  {{ user.lastname }} <br>
                    <p class="title"><span class="bold"> E-mail :</span> {{ user.email }}<br>
                        {% if user.phone %}
                            {{ user.phone }}<br>
                        {% endif %}
                        {% if user.mobile %}
                            {{ user.mobile }}<br>
                        {% endif %}
                        {% if user.profession %}
                            <span class="bold">Profession :</span> {{ user.profession }}<br>
                        {% endif %}
                        <span class="bold">Anniversaire :</span> {{ user.birthday | date("d/m") }}</p>


                    {% if app.user.id is same as (user.id) %}
                            <button class="btnProfile">
                                <a class="linkProfile" href="{{ path('user_edit', {'id': user.id}) }}">
                                    Modifier mes Informations
                                </a>
                            </button>

                            <button class="btnProfile">
                                <a class="linkProfile" href="{{ path('app_forgot_password_request') }}">
                                    Modifier mon Mot de Passe
                                </a>
                            </button>

                    {% endif %}
                </div>
            </div>


        {% else %}
            <tr>
                <td colspan="13">Aucun résultat trouvé</td>
            </tr>
        {% endif %}
        </div>
    {% endif %}
{% endblock %}
